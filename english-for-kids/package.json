{
  "name": "webpack-template",
  "version": "1.3.0",
  "description": "webpack-template",
  "main": "index.js",
  "scripts": {
    "dev": "webpack-dev-server --open --config ./config/webpack.dev.conf.js",
    "build": "npm run clean -s && set NODE_ENV=production && webpack --config ./config/webpack.build.conf.js",
    "clean": "shx rm -rf dist",
    "lint": "eslint --debug src/",
    "test": "jest"
  },
  "browserslist": [
    "> 1%",
    "last 3 version"
  ],
  "author": "i3",
  "license": "MIT",
  "jest": {
    "verbose": true,
    "bail": true,
    "collectCoverage": true,
    "coverageReporters": [
      "html"
    ],
    "coverageDirectory": "coverage",
    "moduleNameMapper": {
      "\\.(jpe?g|png|gif|eot|otf|webp|svg|ttf|woff2?|mp[34]|webm|wav|m4a|aac|oga)$": "<rootDir>/__mocks__/fileMock.js",
      "\\.(css|less|s[ac]ss|styl)$": "<rootDir>/__mocks__/styleMock.js"
    },
    "moduleFileExtensions": [
      "js",
      "jsx"
    ],
    "moduleDirectories": [
      "node_modules"
    ]
  },
  "devDependencies": {
    "@babel/core": "^7.12.3",
    "@babel/preset-env": "^7.12.1",
    "autoprefixer": "^9.8.6",
    "babel-loader": "^8.0.6",
    "copy-webpack-plugin": "^5.1.2",
    "core-js": "^3.6.5",
    "css-loader": "^3.4.0",
    "cssnano": "^4.1.10",
    "dotenv": "^8.2.0",
    "eslint": "^7.12.1",
    "eslint-config-airbnb-base": "^14.2.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-webpack-plugin": "^2.2.0",
    "file-loader": "^5.0.2",
    "html-webpack-plugin": "^3.2.0",
    "html-webpack-plugin-remove": "^0.1.0",
    "jest": "^26.6.2",
    "mini-css-extract-plugin": "^0.9.0",
    "node-sass": "^4.13.0",
    "postcss-loader": "^3.0.0",
    "sass-loader": "^8.0.0",
    "shx": "^0.3.3",
    "style-loader": "^1.3.0",
    "webpack": "^4.44.2",
    "webpack-cli": "^3.3.10",
    "webpack-dev-server": "^3.10.1",
    "webpack-merge": "^4.2.2"
  }
}
